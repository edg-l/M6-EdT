<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/m6</property>
        <property name="hibernate.connection.username">m6</property>
        <property name="hibernate.connection.password">m6</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!--<property name="hbm2ddl.auto">create</property>-->

        <!-- Mapping With Model Class Containing Annotations -->
        <mapping class="com.edgarluque.m6.uf2.activitat3_1.Politic" />
        <mapping class="com.edgarluque.m6.uf2.activitat3_2.Client" />
        <mapping class="com.edgarluque.m6.uf2.activitat3_2.Comanda" />
        <mapping class="com.edgarluque.m6.examen_uf2.Nivell" />
        <mapping class="com.edgarluque.m6.examen_uf2.Monstre" />
    </session-factory>
</hibernate-configuration>